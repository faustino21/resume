---
export const prerender = true

import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'

import Button from '@/components/Button.astro'
import Pagination from '@/components/Paginator.astro'
import ExpPreview from '@/components/experience/ExpPreview.astro'
import PageLayout from '@/layouts/BaseLayout.astro'
import { getAllExperience, sortExpMDByDate } from '@/utils'

export const getStaticPaths = (async ({ paginate }) => {
	const allExps = await getAllExperience()
	const allExpsByDate = sortExpMDByDate(allExps)
	return paginate(allExpsByDate, { pageSize: 10, props: { } })
}) satisfies GetStaticPaths



interface Props {
	page: Page<CollectionEntry<'experience'>>
}

const { page } = Astro.props

const meta = {
	description: 'Work expereience here',
	title: 'Experience'
}

const paginationProps = {
	...(page.url.prev && {
		prevUrl: {
			text: `← Previous Experience`,
			url: page.url.prev
		}
	}),
	...(page.url.next && {
		nextUrl: {
			text: `Next Experience →`,
			url: page.url.next
		}
	})
}
---

<PageLayout meta={meta}>
	<div class='w-full'>
		<Button title='Back' href='/' style='button'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='14'
				height='14'
				viewBox='0 0 24 24'
				slot='icon-before'
			>
				<path
					fill='currentColor'
					d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
				>
				</path>
			</svg>
		</Button>

		<h1 class='mb-6 mt-5 text-2xl font-bold'>Experience</h1>
		{page.data.length === 0 && <p>No experience yet.</p>}

		{
			page.data.length > 0 && (
				<div class='grid gap-y-16 sm:grid-cols-[3fr_1fr] sm:gap-x-8'>
					<section aria-label='Blog posts list'>
						<ul class='flex flex-col gap-y-4 text-start'>
							{page.data.map((p) => (
								<ExpPreview post={p} withDesc />
							))}
						</ul>
						<Pagination {...paginationProps} />
					</section>
				</div>
			)
		}
	</div>
</PageLayout>
